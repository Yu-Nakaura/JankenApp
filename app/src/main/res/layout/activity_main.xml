<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/change_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:text="出す手を選んでね"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/choki_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="325dp"
        android:layout_height="695dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/cpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32sp"
            android:text="相手"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/cpu_image"
            android:layout_width="275dp"
            android:layout_height="121dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/hatena" />

        <TextView
            android:id="@+id/player_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32sp"
            android:text="あなた"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/player_image"
            android:layout_width="275dp"
            android:layout_height="121dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/hatena" />

        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:text="勝敗"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cpu_situation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="相手       "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cpu_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/situation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="   対   "
                android:textSize="40sp" />

            <TextView
                android:id="@+id/player_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/player_situation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="     あなた"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/goo_button"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_gravity="center"
                android:layout_marginEnd="12sp"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/goo" />

            <ImageButton
                android:id="@+id/choki_button"
                android:layout_width="65sp"
                android:layout_height="80sp"
                android:layout_gravity="center"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/choki" />

            <ImageButton
                android:id="@+id/paa_button"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_gravity="center"
                android:layout_marginStart="12sp"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/paa" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>